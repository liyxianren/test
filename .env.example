# Flask配置
SECRET_KEY=your-secret-key-here-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=True
PORT=5000

# 数据库配置
# 云端部署时使用MySQL（Zeabur会自动注入MYSQL_*环境变量）
DATABASE_URL=mysql+pymysql://user:password@host:port/database?charset=utf8mb4
# 本地开发时可以使用SQLite
# DATABASE_URL=sqlite:///diary.db

# JWT配置
JWT_SECRET_KEY=your-jwt-secret-key-here-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES_HOURS=24

# Redis配置（可选，用于缓存）
REDIS_URL=redis://localhost:6379/0

# COZE API配置（可选）
COZE_API_KEY=your-coze-api-key-here
COZE_BOT_ID=your-coze-bot-id-here
COZE_BASE_URL=https://api.coze.com

# QWEN模型配置（可选）
QWEN_API_KEY=your-qwen-api-key-here
QWEN_MODEL_NAME=qwen-turbo
QWEN_BASE_URL=https://dashscope.aliyuncs.com/api/v1

# ZHIPU GLM配置（必需 - ChatGLM API）
ZHIPU_API_KEY=your-zhipu-api-key-here
ZHIPU_MODEL_NAME=glm-4.5-x
ZHIPU_POSTCARD_MODEL=glm-4.5-x

# 豆包图片生成配置（用于生成小狐狸明信片图片）
ARK_API_KEY=your-ark-api-key-here
DOUBAO_IMAGE_MODEL=doubao-seedream-4-5-251128

# 文件上传配置
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=txt,pdf,png,jpg,jpeg,gif

# 应用配置
APP_NAME=CBT情绪日记游戏
APP_VERSION=1.0.0